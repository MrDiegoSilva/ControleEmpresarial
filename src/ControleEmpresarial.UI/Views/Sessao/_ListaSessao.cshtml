@model ICollection<ControleEmpresarial.Estoque.Application.ViewModel.SessaoViewModel>
@{
    Layout = null;
    int cont = 1;
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-heading">
                <button type="button" class="btn btn-primary btn-lg" onclick="AddSessao()">
                    Adicionar Sessão
                </button>
            </div>
            <div class="panel-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table id="datatable1" class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th class="col-md-1">#</th>
                                <th class="col-md-9">Descrição</th>
                                <th class="col-md-2 text-center">Opção</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model.OrderBy(s => s.Descricao))
                            {
                                <tr>
                                    <td>@cont</td>
                                    <td>@item.Descricao</td>
                                    <td>
                                        <button class="btn btn-success btn-sm pull-left" type="button" onclick="EditarSessao('@item.Id')">
                                            <em class="icon-action-redo"></em>&nbsp; Editar
                                        </button>
                                        <button class="btn btn-danger btn-sm pull-right" type="button" onclick="alertaSessao('@item.Id', '@item.LocalidadeId')">
                                            <em class="icon-trash"></em>&nbsp; Excluir
                                        </button>
                                    </td>
                                </tr>
                                cont++;
                            }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div role="alert" class="alert alert-danger">
                        <strong>Oops!</strong> &nbsp; Está localidade não possui sessões.
                    </div>
                }
            </div>
        </div>
    </div>
</div>