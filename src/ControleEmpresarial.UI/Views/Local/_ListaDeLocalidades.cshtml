
@model ICollection<ControleEmpresarial.Estoque.Application.ViewModel.LocalidadeViewModel>
@{
    Layout = null;
    int cont = 1;
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table id="datatable1" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th class="col-md-1">#</th>
                                    <th class="col-md-10">Descrição</th>
                                    <th class="col-md-1">Opção</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@cont</td>
                                        <td>@item.Descricao</td>
                                        <td>
                                            <a href="@Url.Action("Details", new {id = item.Id})" class="btn btn-default btn-sm">
                                                <em class="icon-action-redo"></em>&nbsp; Detalhes
                                            </a>
                                        </td>
                                    </tr>
                                    cont++;
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div role="alert" class="alert alert-danger">
                        <strong>Oops!</strong> &nbsp; Não foram encontradas localidades com essas especificações.
                    </div>
                }
            </div>
        </div>
    </div>
</div>