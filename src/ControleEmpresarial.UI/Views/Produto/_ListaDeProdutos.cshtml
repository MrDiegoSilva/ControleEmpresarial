@model ICollection<ControleEmpresarial.Estoque.Application.ViewModel.ProdutoViewModel>
@{
    Layout = null;
    int cont = 1;
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                @if (Model != null && Model.Any()) { 
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Descrição</th>
                                <th>Local</th>
                                <th>Marca</th>
                                <th>Valor</th>
                                <th>Opção</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@cont</td>
                                    <td>@item.Descricao</td>
                                    <td>@item.Marca.Descricao</td>
                                    <td>@item.Sessao.Localidade.Descricao</td>
                                    <td>@item.Sessao.Descricao</td>
                                    <td>
                                        <a href="@Url.Action("Details", new {id = item.Id})" class="btn btn-default btn-sm">
                                            <em class="icon-action-redo"></em>&nbsp; Detalhes
                                        </a>
                                    </td>
                                </tr>
                                cont++;
                            }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div role="alert" class="alert alert-danger">
                        <strong>Oops!</strong> &nbsp; Não foram encontrados produtos com essas especificações.
                    </div>
                }
            </div>
        </div>
    </div>
</div>